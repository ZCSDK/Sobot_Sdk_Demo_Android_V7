<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sobot_real_ll_content"
    style="@style/sobot_msg_top_bottom_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/sobot_msg_margin_edge"
    android:layout_marginLeft="@dimen/sobot_msg_margin_edge"
    android:layout_marginEnd="@dimen/sobot_msg_margin_edge"
    android:layout_marginRight="@dimen/sobot_msg_margin_edge"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sobot_ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/sobot_msg_margin_edge"
        android:layout_marginLeft="@dimen/sobot_msg_margin_edge"
        android:layout_marginEnd="@dimen/sobot_msg_margin_edge"
        android:layout_marginRight="@dimen/sobot_msg_margin_edge"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sobot_notify_bg"
        android:paddingLeft="@dimen/sobot_msg_top_bottom_padding_edge"
        android:paddingTop="@dimen/sobot_msg_top_bottom_padding_edge"
        android:paddingBottom="@dimen/sobot_msg_top_bottom_padding_edge"
        android:paddingRight="@dimen/sobot_msg_top_bottom_padding_edge"
        android:paddingStart="@dimen/sobot_msg_top_bottom_padding_edge"
        android:paddingEnd="@dimen/sobot_msg_top_bottom_padding_edge">

        <ImageView
            android:id="@+id/sobot_announcement_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/sobot_announcement_img_icon" />

        <TextView
            android:id="@+id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/sobot_announcement_icon"
            android:textColor="@color/sobot_announcement_title_color"
            android:textSize="@dimen/sobot_text_font_14"
            android:layout_toEndOf="@id/sobot_announcement_icon"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/expand_text_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/expandable_text"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:drawableRight="@drawable/sobot_notice_arrow_down"
            android:drawablePadding="4dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingBottom="@dimen/sobot_msg_top_bottom_padding_edge"
            android:textColor="@color/sobot_common_gray2"
            android:textSize="@dimen/sobot_text_font_12"
            android:visibility="gone"
            android:drawableEnd="@drawable/sobot_notice_arrow_down"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/sobot_reminde_time_Text"
        style="@style/sobot_center_remind_time"
        android:layout_marginBottom="0dp" />
</LinearLayout>