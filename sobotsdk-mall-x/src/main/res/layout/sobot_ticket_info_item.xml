<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sobot_common_gray6"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/sobot_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sobot_common_gray1"
            android:textSize="@dimen/sobot_text_font_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sobot_tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/sobot_tv_title"
            android:layout_alignBottom="@id/sobot_tv_title"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/sobot_tv_title"
            android:layout_toRightOf="@+id/sobot_tv_title"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:src="@drawable/sobot_ticket_new_flag"
            android:textColor="@color/sobot_common_white"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/sobot_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sobot_tv_title"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="94dp"
            android:layout_marginRight="94dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/sobot_common_gray3"
            android:textSize="@dimen/sobot_text_font_13" />

        <TextView
            android:id="@+id/sobot_tv_ticket_status"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sobot_ticket_status_bg3"
            android:gravity="center"
            android:paddingStart="18dp"
            android:paddingLeft="18dp"
            android:paddingTop="2dp"
            android:paddingEnd="18dp"
            android:paddingRight="18dp"
            android:paddingBottom="2dp"
            android:textColor="@color/sobot_common_white"
            android:textSize="@dimen/sobot_text_font_13" />


        <TextView
            android:id="@+id/sobot_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sobot_tv_content"
            android:textColor="@color/sobot_common_gray3"
            android:textSize="@dimen/sobot_text_font_12" />

    </RelativeLayout>
</LinearLayout>