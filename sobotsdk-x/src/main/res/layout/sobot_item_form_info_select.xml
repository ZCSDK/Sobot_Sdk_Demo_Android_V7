<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sobot_color_bg_first"
    android:orientation="vertical">

    <TextView
        android:id="@+id/work_order_customer_field_text_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily=""
        android:includeFontPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="标题"
        android:textColor="@color/sobot_color_text_first"
        android:textSize="@dimen/sobot_text_font_14"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sobot_bg_dialog_input"
        android:layout_marginTop="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/work_order_customer_field_text_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:textColor="@color/sobot_color_text_first"
            android:textColorHint="@color/sobot_color_text_third"
            android:textSize="@dimen/sobot_text_font_14" />

        <ImageView
            android:id="@+id/work_order_customer_field_text_img"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sobot_cus_select" />


    </LinearLayout>

</LinearLayout>