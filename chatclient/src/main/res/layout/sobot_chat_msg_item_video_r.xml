<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sobot_real_ll_content"
    style="@style/sobot_msg_top_bottom_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 时间 -->
    <TextView
        android:id="@+id/sobot_reminde_time_Text"
        style="@style/sobot_center_remind_time" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/sobot_msg_margin_edge"
        android:gravity="end">

        <!--头像-->
        <com.sobot.chat.widget.image.SobotProgressImageView
            android:id="@+id/sobot_msg_face_iv"
            style="@style/sobot_chatting_right_face_style"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />

        <!-- 昵称 -->
        <TextView
            android:id="@+id/sobot_msg_nike_name_tv"
            style="@style/sobot_chatting_right_nickname"
            android:layout_toStartOf="@id/sobot_msg_face_iv"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/sobot_frame_layout"
                style="@style/sobot_msg_left_empty_bg_style">
                <!-- 消息已读未读 -->
                <ImageView
                    android:id="@+id/sobot_msg_read_status"
                    style="@style/sobot_msg_read_status_style" />
                <!-- 消息的状态 -->
                <ImageView
                    android:id="@+id/sobot_msgStatus"
                    style="@style/sobot_msg_send_status_style"
                    android:visibility="gone" />

                <!-- 消息的loading -->
                <ProgressBar
                    android:id="@+id/sobot_msgProgressBar"
                    style="@style/sobot_msg_send_loading_style"
                    android:indeterminateDrawable="@drawable/sobot_progressbar_circle_loading"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.sobot.chat.widget.image.SobotRCRelativeLayout
                    android:id="@+id/sobot_rl_hollow_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF777474"
                    app:sobot_clip_background="true"
                    app:sobot_round_corner="12dp">

                    <com.sobot.chat.widget.image.SobotProgressImageView
                        android:id="@+id/st_iv_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:image_is_show_progressbar="true"
                        app:image_layout_change_animate="false"
                        app:image_max_height="@dimen/sobot_msg_video_max_height"
                        app:image_max_width="@dimen/sobot_msg_video_max_width"
                        app:image_min_height="@dimen/sobot_msg_video_min_height"
                        app:image_min_width="@dimen/sobot_msg_video_min_width"
                        app:sobot_round_corner_bottom_left="@dimen/sobot_msg_image_video_corner_radius"
                        app:sobot_round_corner_bottom_right="@dimen/sobot_msg_image_video_corner_radius"
                        app:sobot_round_corner_top_left="@dimen/sobot_msg_image_video_corner_radius"
                        app:sobot_round_corner_top_right="@dimen/sobot_msg_image_video_corner_radius" />

                    <ImageView
                        android:id="@+id/st_tv_play"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/sobot_ic_play"
                        android:visibility="gone" />


                    <com.sobot.chat.widget.image.SobotRCRelativeLayout
                        android:id="@+id/rl_upload"
                        android:layout_width="@dimen/sobot_msg_video_min_height"
                        android:layout_height="@dimen/sobot_msg_video_min_height"
                        android:background="#66000000"
                        android:gravity="center"
                        android:visibility="gone"
                        app:sobot_clip_background="true"
                        app:sobot_round_corner="12dp">

                        <com.sobot.chat.widget.image.SobotProgressView
                            android:id="@+id/progress_view"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            app:backgroundColor="#80FFFFFF"
                            app:progressColor="#FFFFFF"
                            app:strokeWidth="2dp" />

                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sobot_text_font_12" />
                    </com.sobot.chat.widget.image.SobotRCRelativeLayout>

                </com.sobot.chat.widget.image.SobotRCRelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>