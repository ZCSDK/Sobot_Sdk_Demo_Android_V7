<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sobot_bg_ticket_info"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingTop="24dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/iv_ticket"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/sobot_ticket_item"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/sobot_tv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_ticket"
        android:layout_alignEnd="@+id/iv_ticket"
        android:src="@drawable/sobot_ticket_new"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/sobot_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/iv_ticket"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/sobot_color_text_first"
        android:textSize="@dimen/sobot_text_font_14" />

    <TextView
        android:id="@+id/sobot_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sobot_tv_title"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/iv_ticket"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
        android:maxLines="2"
        android:textColor="@color/sobot_ticket_text_desc"
        android:textSize="@dimen/sobot_text_font_14" />

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sobot_tv_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/iv_ticket">

        <TextView
            android:id="@+id/sobot_tv_ticket_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
            android:lines="1"
            android:paddingBottom="3dp"
            android:textColor="@color/sobot_refresh_text_color"
            android:textSize="@dimen/sobot_text_font_14" />

        <TextView
            android:id="@+id/sobot_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
            android:textColor="@color/sobot_color_text_third"
            android:textSize="@dimen/sobot_text_font_14" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_time"
        android:layout_marginTop="20dp"
        android:background="@color/sobot_ticket_item_press" />
</RelativeLayout>