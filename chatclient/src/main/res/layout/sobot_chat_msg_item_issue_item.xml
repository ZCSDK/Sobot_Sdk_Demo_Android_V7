<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sobot_hot_item_hs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_issue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/sobot_item_hot_selector"
        android:orientation="vertical">

        <com.sobot.chat.widget.image.SobotRCImageView
            android:id="@+id/sobot_hot_item_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:sobot_round_as_circle="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/sobot_hot_item_title_zhanwei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
                android:layout_marginTop="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/sobot_color_text_first"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/sobot_hot_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
                android:layout_marginTop="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/sobot_color_text_first"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="12dp"
        android:layout_height="1dp" />
</LinearLayout>