<?xml version="1.0" encoding="utf-8"?><!--聊天页面右上角更多 菜单里边布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_more_root"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/sobot_background_shadow3"
        android:elevation="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:outlineSpotShadowColor="@color/sobot_color_shadow_third"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:translationY="6dp">

        <LinearLayout
            android:id="@+id/ll_clear_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:paddingBottom="7dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/sobot_icon_hisrory_clear" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:includeFontPadding="false"
                android:text="@string/sobot_clear_history_message"
                android:textColor="@color/sobot_color_text_first"
                android:textSize="@dimen/sobot_text_font_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>