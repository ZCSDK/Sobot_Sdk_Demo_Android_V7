<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/sobot_dialog_margin"
        android:paddingEnd="@dimen/sobot_dialog_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sobot_activity_cusfield_listview_items_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/sobot_color_text_first"
            android:textSize="@dimen/sobot_text_font_14" />

        <ImageView
            android:id="@+id/sobot_activity_cusfield_listview_items_ishave"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="9dp"
            android:contentDescription="@null"
            android:src="@drawable/sobot_icon_item_selected"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/sobot_dialog_line" />

</LinearLayout>