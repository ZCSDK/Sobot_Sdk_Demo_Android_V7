<?xml version="1.0" encoding="utf-8"?>
<com.sobot.chat.widget.SobotMaxSizeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:sobot_max_width="@dimen/sobot_msg_content_max_width">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/sobot_help_center_item_bg"
        android:elevation="12dp"
        android:outlineSpotShadowColor="@color/sobot_color_shado"
        android:padding="16dp">

        <com.sobot.chat.widget.image.SobotProgressImageView
            android:id="@+id/sobot_template1_item_thumbnail"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            app:image_height="64dp"
            app:image_width="64dp"
            app:sobot_round_corner_bottom_left="8dp"
            app:sobot_round_corner_bottom_right="8dp"
            app:sobot_round_corner_top_left="8dp"
            app:sobot_round_corner_top_right="8dp" />

        <LinearLayout
            android:id="@+id/sobot_template1_item_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sobot_template1_item_thumbnail"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sobot_template1_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/sobot_color_text_first"
                android:textSize="@dimen/sobot_text_font_12" />

            <TextView
                android:id="@+id/sobot_template1_item_other_flag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
                android:maxWidth="80dp"
                android:maxLines="1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/sobot_color_text_third"
                android:textSize="@dimen/sobot_text_font_12"
                android:visibility="visible" />
        </LinearLayout>


        <TextView
            android:id="@+id/sobot_template1_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sobot_template1_item_title_ll"
            android:layout_alignStart="@id/sobot_template1_item_title_ll"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/sobot_template1_item_thumbnail"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
            android:maxLines="2"
            android:minLines="2"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/sobot_color_text_third"
            android:textSize="@dimen/sobot_text_font_12" />


    </RelativeLayout>

</com.sobot.chat.widget.SobotMaxSizeLinearLayout>