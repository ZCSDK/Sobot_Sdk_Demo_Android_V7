<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sobot_my_evaluate_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sobot_color_bg_first"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingBottom="24dp"
    android:paddingEnd="20dp">

    <LinearLayout
        android:id="@+id/sobot_ll_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.sobot.chat.widget.image.SobotProgressImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/sobot_tiket_head_w"
            android:layout_height="@dimen/sobot_tiket_head_w"
            app:image_bg="@color/sobot_color_transparent"
            app:image_is_show_progressbar="true"
            app:image_min_height="@dimen/sobot_tiket_head_w"
            app:image_min_width="@dimen/sobot_tiket_head_w"
            app:sobot_round_as_circle="true" />

        <TextView
            android:id="@+id/sobot_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:textColor="@color/sobot_color_text_first"
            android:textSize="@dimen/sobot_text_font_14"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sobot_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/sobot_color_text_third"
            android:textSize="@dimen/sobot_text_font_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/sobot_tv_isSolve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/sobot_color_text_first"
        android:textSize="@dimen/sobot_text_font_14" />

    <LinearLayout
        android:id="@+id/sobot_ll_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/sobot_color_bg_first"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/sobot_tv_my_evaluate_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sobot_color_text_first"
            android:textSize="@dimen/sobot_text_font_14"
            android:textStyle="bold"/>

        <com.sobot.chat.widget.SobotFiveStarsSmallLayout
            android:id="@+id/sobot_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/sobot_tv_lab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/sobot_color_text_first"
        android:textSize="@dimen/sobot_text_font_14" />

    <TextView
        android:id="@+id/sobot_tv_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/sobot_color_text_first"
        android:textSize="@dimen/sobot_text_font_14" />


</LinearLayout>