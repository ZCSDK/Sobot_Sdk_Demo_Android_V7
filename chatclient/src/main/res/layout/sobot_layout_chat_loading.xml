<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/sobot_color_bg_first">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.sobot.chat.widget.LoadingView.SobotLoadingView
            android:id="@+id/iv_loading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:backgroundColor="@color/sobot_color_loading_bg"
            app:progressColor="@color/sobot_color"
            android:visibility="gone"
            app:strokeWidth="2dp" />

        <!-- 显示加载文字的动画 -->

        <TextView
            android:id="@+id/sobot_txt_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/sobot_icon_nonet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/sobot_icon_timeout"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sobot_textReConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="15dp"
            android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
            android:text="@string/sobot_str_timeout"
            android:textColor="@color/sobot_color_text_first"
            android:textSize="@dimen/sobot_text_font_20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sobot_textReConnect_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
            android:text="@string/sobot_str_timeout_reloading"
            android:textColor="@color/sobot_color_text_third"
            android:textSize="@dimen/sobot_text_font_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sobot_btn_reconnect"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/sobot_button_style"
            android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
            android:minWidth="240dp"
            android:paddingStart="15dp"
            android:includeFontPadding="false"
            android:paddingEnd="15dp"
            android:text="@string/sobot_reunicon"
            android:textAllCaps="false"
            android:textColor="@color/sobot_color_text_first"
            android:textSize="@dimen/sobot_text_font_14"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>